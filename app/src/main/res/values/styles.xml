<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="auto_suggestion_countries_search_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_heading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="weather_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="weather_text_placeholder_style" parent="weather_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>